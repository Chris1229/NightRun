                   android:layout_height="match_parent"
                   android:text="开启红蓝闪灯"
                   android:layout_centerVertical="true"
                   android:textSize="15sp"
                   android:textColor="@color/color_35304F"
                   android:drawableLeft="@mipmap/device_detail_dengguang"
                   android:drawablePadding="12dp"
                   android:gravity="center_vertical"
                   />

               <CheckBox
                   android:id="@+id/check_dengguang"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="16dp"
                   android:layout_centerVertical="true"
                   android:button="@null"
                   android:background="@drawable/radiobutton_bg"
                   android:checked="true"
                   />

           </RelativeLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="1px"
               android:background="@color/color_F1F1F4"
               android:layout_marginLeft="15dp"/>


           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:background="@color/color_white"
               android:paddingLeft="15dp"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="开启蜂鸣器"
                   android:layout_centerVertical="true"
                   android:textSize="15sp"
                   android:textColor="@color/color_35304F"
                   android:drawableLeft="@mipmap/device_detail_fengming"
                   android:drawablePadding="12dp"
                   android:gravity="center_vertical"
                   />

               <CheckBox
                   android:id="@+id/check_fengming"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="16dp"
                   android:layout_centerVertical="true"
                   android:button="@null"
