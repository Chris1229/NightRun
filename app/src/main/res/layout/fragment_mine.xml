<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F1F1F4"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/color_white"
        android:layout_marginBottom="18dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textSize="18sp"
            android:textColor="@color/color_9489D7"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_white">

        <RelativeLayout
            android:id="@+id/personInfoId"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/color_white"
            android:paddingLeft="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="编辑资料"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@color/color_35304F"
                android:drawableLeft="@mipmap/mine_fankui"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right_grey"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"/>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/tuijianId"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/color_white"
            android:paddingLeft="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="推荐给好友"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@color/color_35304F"
                android:drawableLeft="@mipmap/mine_tuijian"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right_grey"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_F1F1F4"
            android:layout_marginLeft="15dp"/>

        <RelativeLayout
            android:id="@+id/bangdingweixinId"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/color_white"
            android:paddingLeft="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="绑定微信"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@color/color_35304F"
                android:drawableLeft="@mipmap/mine_weixin"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right_grey"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_F1F1F4"
            android:layout_marginLeft="15dp"/>

        <RelativeLayout
            android:id="@+id/revisepasswordId"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/color_white"
            android:paddingLeft="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="修改密码"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@color/color_35304F"
                android:drawableLeft="@mipmap/mine_revisepassword"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right_grey"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_F1F1F4"
            android:layout_marginLeft="15dp"/>

        <RelativeLayout
            android:id="@+id/refundId"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/color_white"
            android:paddingLeft="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="意见反馈"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@color/color_35304F"
                android:drawableLeft="@mipmap/mine_fankui"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right_grey"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:background="@color/color_F1F1F4"
            />

        <RelativeLayout
            android:id="@+id/helpId"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/color_white"
            android:paddingLeft="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="帮助"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@color/color_35304F"
                android:drawableLeft="@mipmap/mine_help"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right_grey"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_F1F1F4"
            android:layout_marginLeft="15dp"/>

        <RelativeLayout
            android:id="@+id/aboutId"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/color_white"
            android:paddingLeft="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="关于"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@color/color_35304F"
                android:drawableLeft="@mipmap/mine_about"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right_grey"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"/>


        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
