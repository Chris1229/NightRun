<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_F1F1F4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_40dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:background="#fff"
        android:layout_marginTop="@dimen/value_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号："
            android:textColor="#333"
            android:textSize="@dimen/value_15sp"/>


        <TextView
            android:id="@+id/userId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:layout_marginLeft="@dimen/value_10dp"
            android:textSize="@dimen/value_15sp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_user_icon"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#fff">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="头像"
            android:textColor="#333"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/default_avtar" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dip"
            android:background="@drawable/arrow_right_medium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_user_nick_name"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="#fff">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="昵称"
            android:textColor="#333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="#333"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dip"
            android:background="@drawable/arrow_right_medium" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/set_split" />

    <RelativeLayout
        android:id="@+id/layout_sex"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:text="性别"
            android:textColor="#333"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_sex">

            <TextView
                android:id="@+id/tv_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img_introduction_arrow"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#333"
                android:textSize="14sp" />

            <ImageView
                android:id="@id/img_introduction_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dip"
                android:background="@drawable/arrow_right_medium" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>