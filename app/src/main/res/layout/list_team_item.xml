<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/teamImgHead"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="fitXY"
            android:src="@mipmap/touxiang"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:gravity="left|center_vertical">

            <TextView
                android:id="@+id/teamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_000"
                android:text="酷跑全垒打"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/teamLeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_000"
                android:text="队长：李四"
                android:textSize="12sp"
                android:layout_below="@id/teamName"
                android:layout_marginRight="17dp"
                />

            <TextView
                android:id="@+id/teamNumAnddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_000"
                android:text="10人/2017-08-08"
                android:textSize="12sp"
                android:layout_below="@id/teamName"
                android:layout_toRightOf="@id/teamLeader"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/teamStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="激活"
            android:textSize="13sp"
            android:textColor="@color/color_9489D7"
            android:background="@mipmap/jihuo"
            android:gravity="center"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="14dp"
        android:background="@color/color_F1F1F4"/>
</LinearLayout>
